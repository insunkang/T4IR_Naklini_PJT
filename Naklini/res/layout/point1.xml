<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="낚시 포인트"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOnboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
			android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="선상낚시"></Button>

        <Button
            android:id="@+id/btnSea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
			android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="바다낚시"></Button>

        <Button
            android:id="@+id/btnFreshwater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
			android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="민물낚시"></Button>

        <Button
            android:id="@+id/btnRock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
			android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="갯바위낚시"></Button>
    </LinearLayout>


    <!--<ImageView android:background = "#0000ff"
